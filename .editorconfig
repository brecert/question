# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{nix,cpp,c,toml,hs,scm,sld,md}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{rs,raku,zig}]
indent_style = space
indent_size = 4
